<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <gradient android:startColor="@color/parse_extras_button_facebook_selected_start"
                      android:endColor="@color/parse_extras_button_facebook_selected_end"
                      android:angle="270"
                      />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <gradient android:startColor="@color/parse_extras_button_facebook_selected_start"
                      android:endColor="@color/parse_extras_button_facebook_selected_end"
                      android:angle="270"
                    />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <gradient android:startColor="@color/parse_extras_button_facebook_start"
                      android:endColor="@color/parse_extras_button_facebook_end"
                      android:angle="270"
                    />
        </shape>
    </item>

</selector>